{
  "permissions": {
    "deny": [
      "Edit(.claude/**)",
      "Write(.claude/**)",
      "Read(.claude/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/no-ignores.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/lint.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/test.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
