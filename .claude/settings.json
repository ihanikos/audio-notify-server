{
  "permissions": {
    "deny": [
      "Edit(.claude/**)",
      "Write(.claude/**)",
      "Read(.claude/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write|Glob|Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-claude-dir.sh",
            "timeout": 2
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/no-ignores.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/lint.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/test.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
